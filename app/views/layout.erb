		<link href='http://fonts.googleapis.com/css?family=Raleway:400,900,700,100|Fira+Sans:300,700' rel='stylesheet' type='text/css'>
		
		<%
			path = @request.path_info.split('/')
			@controller = path[1]
		%>
		<link rel="stylesheet" href="/css/<%= _viewName %>.css" />
		
		<link rel="shortcut icon" href="/favicon.ico" />
		
	</head>
	<body>
		
		<div id="main-container">
			<div id="container">

				<% if defined? trigger %>
				<script>
				window.view_data = <%= trigger.to_json %>
				</script>
				<% end %>


				<header id="main-header" class="inside">
					<h1>
						<a href="/">
							<img src="/img/logo.png"  />
							¿Quién me representa?
						</a>
					</h1>

					<nav id="social">
						<a class="icono social-icon facebook" href="http://www.facebook.com/sharer/sharer.php?u=http://representantes.pati.to" target="_blank">facebook</a>
						<a class="icono social-icon twitter" href="http://twitter.com/share?url=http%3A%2F%2Frepresentantes.pati.to&via=peeseeme&text=Ya se quien me representa en el congreso" target="_blank">twitter</a>
						<a class="icono round" href="/busqueda">search</a>
					</nav>

				</header>

				<main>
					<%= yield %>
				</main>
			</div>
			
			<footer>
				<a href="http://surrealista.mx" title="Partido Surrealista Mexicano">
					<img src="/img/pato.svg" title="patito" id="patito"/>
					Partido Surrealista Mexicano
				</a>
			</footer>
		</div>

		<script type="text/javascript">
		  var _gaq = _gaq || [];
		  _gaq.push(['_setAccount', 'UA-37922009-1']);
		  _gaq.push(['_trackPageview']);
		</script>
		<script src="http://www.google-analytics.com/ga.js" async="true"></script>
		<script src="/js/<%= _viewName %>.js"></script>
	</body>
